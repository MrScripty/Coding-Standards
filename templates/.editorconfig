# EditorConfig - Consistent coding styles across editors
# https://editorconfig.org
#
# Most editors support EditorConfig natively or via plugin.
# Copy this file to your project root.

root = true

# ─────────────────────────────────────────────────────────────────
# Default settings for all files
# ─────────────────────────────────────────────────────────────────

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

# ─────────────────────────────────────────────────────────────────
# Web technologies (2-space indent is standard)
# ─────────────────────────────────────────────────────────────────

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{css,scss,sass,less}]
indent_size = 2

[*.{html,htm}]
indent_size = 2

[*.{vue,svelte}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

# ─────────────────────────────────────────────────────────────────
# Markdown (preserve trailing whitespace for line breaks)
# ─────────────────────────────────────────────────────────────────

[*.md]
trim_trailing_whitespace = false
max_line_length = off

# ─────────────────────────────────────────────────────────────────
# Makefiles (require tabs)
# ─────────────────────────────────────────────────────────────────

[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

# ─────────────────────────────────────────────────────────────────
# Shell scripts
# ─────────────────────────────────────────────────────────────────

[*.sh]
indent_size = 2

[*.bash]
indent_size = 2

# ─────────────────────────────────────────────────────────────────
# Python
# ─────────────────────────────────────────────────────────────────

[*.py]
indent_size = 4
max_line_length = 88

# ─────────────────────────────────────────────────────────────────
# Go (tabs are standard)
# ─────────────────────────────────────────────────────────────────

[*.go]
indent_style = tab

# ─────────────────────────────────────────────────────────────────
# Rust
# ─────────────────────────────────────────────────────────────────

[*.rs]
indent_size = 4
max_line_length = 100

# ─────────────────────────────────────────────────────────────────
# C# / .NET
# ─────────────────────────────────────────────────────────────────

[*.cs]
indent_size = 4

[*.csproj]
indent_size = 2

[*.sln]
indent_style = tab

# ─────────────────────────────────────────────────────────────────
# XML / Config files
# ─────────────────────────────────────────────────────────────────

[*.xml]
indent_size = 2

[*.config]
indent_size = 2

# ─────────────────────────────────────────────────────────────────
# Git
# ─────────────────────────────────────────────────────────────────

[.git*]
indent_size = 2

# ─────────────────────────────────────────────────────────────────
# Docker
# ─────────────────────────────────────────────────────────────────

[Dockerfile*]
indent_size = 4

[docker-compose*.yml]
indent_size = 2
